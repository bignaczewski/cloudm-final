= link_to new_post_path, class: 'btn btn-primary' do
  %span.glyphicon.glyphicon-plus
  New Post
%h1 Listing posts

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Title
        %th Body
        %th Created at
        %th
        %th

    %tbody
      - @posts.each do |post|
        %tr
          %td= post.title
          %td= post.body
          %td= post.created_at
          %td= link_to 'Edit', edit_post_path(post)
          %td= link_to 'Destroy', post, data: { confirm: 'Are you sure?' }, method: :delete

= paginate @posts, theme: 'twitter-bootstrap-3'